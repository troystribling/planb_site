<% unless sidebar.categories.blank? -%>
<h3><%= _("Categories")%></h3>
<ul id="categories">
<% for category in sidebar.categories -%>
  <% unless empty.blank? and category.article_counter == 0 %>
  <li><%= link_to h(category.name), category.permalink_url  %> <% unless count.blank? %><em>(<%= category.article_counter %>)</em><% end %></li>
  <% end %>
<% end -%>
</ul>
<% end %>
